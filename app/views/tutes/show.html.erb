<%- model_class = Tute -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @tute.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:episode) %>:</strong></dt>
  <dd><%= @tute.episode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:general_type) %>:</strong></dt>
  <dd><%= @tute.general_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:read_link) %>:</strong></dt>
  <dd><%= @tute.read_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:video_link) %>:</strong></dt>
  <dd><%= @tute.video_link %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tutes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tute_path(@tute), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tute_path(@tute),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
