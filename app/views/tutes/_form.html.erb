<%= form_for @tute, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :episode, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :episode, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :general_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :general_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :read_link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :read_link, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :video_link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :video_link, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tutes_path, :class => 'btn' %>
  </div>
<% end %>
